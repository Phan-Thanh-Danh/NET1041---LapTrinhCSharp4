@model IEnumerable<Lab2ModelBinding.Models.Product>
@{
    var searchModel = ViewBag.SearchModel as Lab2ModelBinding.Models.ProductSearchModel;
    ViewData["Title"] = "Tìm kiếm Sản phẩm";
}

<div>
    <header>
        <h2>Tìm kiếm Sản phẩm</h2>
    </header>

    <!-- Search Form -->
    <form asp-action="Search" method="get">
        <div>
            <label>Tên sản phẩm</label>
            <input type="text" name="Name" value="@searchModel?.Name" placeholder="Nhập tên sản phẩm...">
        </div>
        <div>
            <label>Giá tối thiểu</label>
            <input type="number" name="MinPrice" value="@searchModel?.MinPrice" step="0.01" placeholder="0.00">
        </div>
        <div>
            <label>Giá tối đa</label>
            <input type="number" name="MaxPrice" value="@searchModel?.MaxPrice" step="0.01" placeholder="999999.00">
        </div>
        <div>
            <button type="submit">Tìm kiếm</button>
        </div>
    </form>

    <!-- Results -->
    <table>
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Giá</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <span>@item.Description</span>
                            }
                            else
                            {
                                <span>Không có mô tả</span>
                            }
                        </td>
                        <td>@item.Price.ToString("C")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        <p>Không tìm thấy sản phẩm nào</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>