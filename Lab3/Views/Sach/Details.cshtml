@model bai2.ViewModels.SachViewModel

@{
    ViewData["Title"] = "Chi tiết sách";
}

<div class="book-detail-container">
    <!-- Breadcrumb navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" class="text-decoration-none text-primary">
                    <i class="fas fa-book me-1"></i>Danh sách sách
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.TieuDe</li>
        </ol>
    </nav>

    <!-- Header section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-primary mb-2">
                <i class="fas fa-book-open me-2"></i>Chi tiết sách
            </h1>
            <p class="text-muted">Thông tin chi tiết về sách</p>
        </div>
        <div class="book-status-badge">
            @if (Model.SoLuongTon <= 0)
            {
                <span class="badge bg-danger">
                    <i class="fas fa-times-circle me-1"></i>Hết hàng
                </span>
            }
            else if (Model.SoLuongTon < 5)
            {
                <span class="badge bg-warning text-dark">
                    <i class="fas fa-exclamation-triangle me-1"></i>Sắp hết
                </span>
            }
            else
            {
                <span class="badge bg-success">
                    <i class="fas fa-check-circle me-1"></i>Còn hàng
                </span>
            }
        </div>
    </div>

    <div class="row">
        <!-- Left column - Book cover -->
        <div class="col-lg-4 col-md-5 mb-4">
            <div class="book-cover-card card border-0 shadow-sm h-100">
                <div class="card-body p-4 text-center">
                    <div class="book-cover-wrapper mb-4">
                        @if (Model.CoAnhBia)
                        {
                            <img src="@Url.Action("GetImage", "Sach", new { id = Model.MaSach })"
                                 alt="@Model.TieuDe"
                                 class="img-fluid rounded book-detail-image shadow"
                                 id="bookMainImage">
                        }
                        else
                        {
                            <div class="book-no-image-placeholder d-flex align-items-center justify-content-center rounded"
                                 style="height: 350px; background: linear-gradient(135deg, #e8f0fe 0%, #d7e3fc 100%);">
                                <div>
                                    <i class="fas fa-book fa-5x text-primary opacity-25"></i>
                                    <p class="mt-3 text-muted">Không có ảnh bìa</p>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="book-price-section">
                        <div class="text-muted mb-1">Giá bán</div>
                        <div class="h2 text-primary fw-bold mb-3">@Model.GiaTien.ToString("N0") VNĐ</div>
                    </div>

                    <div class="book-quick-info">
                        <div class="d-flex justify-content-center mb-3">
                            <div class="text-center me-4">
                                <div class="fw-bold text-dark">@Model.SoLuongTon</div>
                                <small class="text-muted">Tồn kho</small>
                            </div>
                            <div class="text-center">
                                <div class="fw-bold text-dark">
                                    <i class="fas fa-calendar-alt me-1 text-primary"></i>
                                    @Model.NgayTaoFormatted
                                </div>
                                <small class="text-muted">Ngày thêm</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right column - Book details -->
        <div class="col-lg-8 col-md-7">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <!-- Book title -->
                    <h2 class="card-title text-dark fw-bold mb-3">@Model.TieuDe</h2>

                    <!-- Book author and category -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <div class="book-info-item">
                                <div class="text-muted small mb-1">
                                    <i class="fas fa-user-edit text-primary me-1"></i>Tác giả
                                </div>
                                <div class="fw-bold text-dark">@Model.TacGia</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="book-info-item">
                                <div class="text-muted small mb-1">
                                    <i class="fas fa-tag text-primary me-1"></i>Thể loại
                                </div>
                                <div class="fw-bold text-dark">
                                    <span class="badge bg-light-blue text-primary">@Model.TenTheLoai</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Book description -->
                    <div class="book-description mb-4">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-align-left me-2"></i>Mô tả chi tiết
                        </h5>
                        <div class="book-description-content p-3 bg-light rounded">
                            @if (!string.IsNullOrEmpty(Model.MoTaChiTiet))
                            {
                                <p class="mb-0 text-dark">@Model.MoTaChiTiet</p>
                            }
                            else
                            {
                                <p class="text-muted mb-0">
                                    <i class="fas fa-info-circle me-1"></i>Chưa có mô tả chi tiết
                                </p>
                            }
                        </div>
                    </div>

                    <!-- Additional information -->
                    <div class="book-additional-info">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-info-circle me-2"></i>Thông tin bổ sung
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-card p-3 mb-3 rounded border">
                                    <div class="d-flex align-items-center">
                                        <div class="info-icon me-3">
                                            <i class="fas fa-money-bill-wave fa-2x text-primary opacity-75"></i>
                                        </div>
                                        <div>
                                            <div class="text-muted small">Giá tiền</div>
                                            <div class="fw-bold text-dark h5 mb-0">@Model.GiaTien.ToString("N0") VNĐ</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card p-3 mb-3 rounded border">
                                    <div class="d-flex align-items-center">
                                        <div class="info-icon me-3">
                                            <i class="fas fa-boxes fa-2x text-primary opacity-75"></i>
                                        </div>
                                        <div>
                                            <div class="text-muted small">Số lượng tồn</div>
                                            <div class="fw-bold text-dark h5 mb-0">@Model.SoLuongTon</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-card p-3 mb-3 rounded border">
                                    <div class="d-flex align-items-center">
                                        <div class="info-icon me-3">
                                            <i class="fas fa-calendar-alt fa-2x text-primary opacity-75"></i>
                                        </div>
                                        <div>
                                            <div class="text-muted small">Ngày thêm</div>
                                            <div class="fw-bold text-dark">@Model.NgayTaoFormatted</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card p-3 mb-3 rounded border">
                                    <div class="d-flex align-items-center">
                                        <div class="info-icon me-3">
                                            <i class="fas fa-image fa-2x text-primary opacity-75"></i>
                                        </div>
                                        <div>
                                            <div class="text-muted small">Ảnh bìa</div>
                                            <div class="fw-bold text-dark">
                                                @if (Model.CoAnhBia)
                                                {
                                                    <span class="text-success">
                                                        <i class="fas fa-check-circle me-1"></i>Có
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">
                                                        <i class="fas fa-times-circle me-1"></i>Không có
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action buttons -->
    <div class="book-actions mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                </a>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.MaSach" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Sửa thông tin
                </a>
                <a asp-action="Delete" asp-route-id="@Model.MaSach" class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt me-2"></i>Xóa sách
                </a>
                @if (Model.SoLuongTon > 0)
                {
                    <button class="btn btn-primary">
                        <i class="fas fa-shopping-cart me-2"></i>Thêm vào giỏ hàng
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom styles for book detail page */
    .book-detail-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 12px;
    }

    .book-cover-card {
        border-radius: 12px;
        background: linear-gradient(135deg, #f8fafc 0%, #e8f0fe 100%);
    }

    .book-detail-image {
        max-height: 350px;
        object-fit: contain;
        transition: transform 0.3s ease;
        border: 1px solid #e8f0fe;
    }

        .book-detail-image:hover {
            transform: scale(1.02);
        }

    .book-no-image-placeholder {
        border: 2px dashed #c2dbfc;
        border-radius: 8px;
    }

    .book-price-section {
        background: white;
        padding: 20px;
        border-radius: 8px;
        border: 2px solid #e8f0fe;
        margin-bottom: 20px;
    }

    .book-info-item {
        padding: 15px;
        background: white;
        border-radius: 8px;
        border: 1px solid #e8f0fe;
    }

    .book-description-content {
        border-left: 4px solid #1a73e8;
        background-color: #f8fafc !important;
    }

    .info-card {
        background: white;
        transition: all 0.3s ease;
        border: 1px solid #e8f0fe !important;
    }

        .info-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(26, 115, 232, 0.1);
            border-color: #1a73e8 !important;
        }

    .info-icon {
        width: 50px;
        height: 50px;
        background: #e8f0fe;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-light-blue {
        background-color: #e8f0fe !important;
        color: #1a73e8 !important;
    }

    .breadcrumb {
        background-color: #f8fafc;
        padding: 12px 16px;
        border-radius: 8px;
        border: 1px solid #e8f0fe;
    }

    .breadcrumb-item.active {
        color: #1a73e8;
        font-weight: 500;
    }

    .book-status-badge .badge {
        padding: 8px 16px;
        font-size: 0.9rem;
        border-radius: 20px;
    }

    .book-actions .btn {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
    }

    .book-actions .btn-outline-primary:hover {
        background-color: #1a73e8;
        color: white;
    }

    .book-actions .btn-warning:hover {
        background-color: #fbbc05;
        color: #202124;
    }

    .book-actions .btn-outline-danger:hover {
        background-color: #ea4335;
        color: white;
    }

    .book-actions .btn-primary:hover {
        background-color: #0d47a1;
        border-color: #0d47a1;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .book-actions {
            flex-direction: column;
            gap: 15px;
        }

            .book-actions > div {
                width: 100%;
            }

            .book-actions .d-flex {
                justify-content: center !important;
                flex-wrap: wrap;
            }

        .book-detail-image {
            max-height: 250px;
        }
    }
</style>

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Hiệu ứng cho ảnh sách
        const bookImage = document.getElementById('bookMainImage');
        if (bookImage) {
            bookImage.addEventListener('click', function() {
                this.classList.toggle('img-fluid');
                if (!this.classList.contains('img-fluid')) {
                    this.style.maxHeight = '500px';
                    this.style.cursor = 'zoom-out';
                } else {
                    this.style.maxHeight = '350px';
                    this.style.cursor = 'zoom-in';
                }
            });
        }

        // Hiệu ứng hover cho info cards
        const infoCards = document.querySelectorAll('.info-card');
        infoCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transition = 'all 0.3s ease';
            });
        });
    });
</script>