@model List<bai2.ViewModels.SachViewModel>

@{
    ViewData["Title"] = "Danh sách sách";
}



<div class="bookstore-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="text-primary mb-2">
                <i class="fas fa-book me-2"></i>Danh sách sách
            </h1>
            <p class="text-muted">Khám phá bộ sưu tập sách đa dạng và phong phú</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Thêm sách mới
        </a>
    </div>
</div>

<div class="bookstore-controls mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group search-box">
                <span class="input-group-text bg-white border-end-0">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm sách theo tên, tác giả...">
                <button class="btn btn-outline-primary" type="button">Tìm kiếm</button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex justify-content-end align-items-center">
                <span class="me-3 text-muted">Lọc theo:</span>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary active">Tất cả</button>
                    <button type="button" class="btn btn-outline-primary">Phổ biến</button>
                    <button type="button" class="btn btn-outline-primary">Mới nhất</button>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="bookstore-counter mb-3">
        <div class="alert alert-primary d-flex align-items-center" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <div>
                Tổng cộng <strong class="text-primary">@Model.Count</strong> sách trong danh sách
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                <div class="book-card card h-100 border-0 shadow-sm">
                    <div class="book-image-container position-relative">
                        <div class="book-image-wrapper">
                            @if (item.CoAnhBia)
                            {
                                <img src="@Url.Action("GetImage", "Sach", new { id = item.MaSach })" 
                                     class="card-img-top book-cover-image" 
                                     alt="@item.TieuDe">
                            }
                            else
                            {
                                <div class="book-no-image d-flex align-items-center justify-content-center">
                                    <i class="fas fa-book-open fa-3x text-primary opacity-25"></i>
                                </div>
                            }
                        </div>
                        
                        @if (item.SoLuongTon <= 0)
                        {
                            <span class="book-badge book-badge-out-of-stock">
                                <i class="fas fa-times-circle me-1"></i>Hết hàng
                            </span>
                        }
                        else if (item.SoLuongTon < 5)
                        {
                            <span class="book-badge book-badge-low-stock">
                                <i class="fas fa-exclamation-triangle me-1"></i>Sắp hết
                            </span>
                        }
                        
                        <div class="book-overlay">
                            <a asp-action="Details" asp-route-id="@item.MaSach" class="btn btn-light btn-sm">
                                <i class="fas fa-eye me-1"></i>Xem nhanh
                            </a>
                        </div>
                    </div>
                    
                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="card-title text-dark fw-bold mb-2 line-clamp-2">@item.TieuDe</h5>
                        
                        <div class="book-author mb-2">
                            <i class="fas fa-user-edit text-primary me-2"></i>
                            <span class="text-muted">@item.TacGia</span>
                        </div>
                        
                        <div class="book-category mb-3">
                            <span class="badge bg-light-blue text-primary">
                                <i class="fas fa-tag me-1"></i>@item.TenTheLoai
                            </span>
                        </div>
                        
                        <p class="card-text text-muted small flex-grow-1 mb-3 line-clamp-3">
                            @if (!string.IsNullOrEmpty(item.MoTaChiTiet))
                            {
                                @item.MoTaChiTiet.Substring(0, Math.Min(100, item.MoTaChiTiet.Length))
                                @if (item.MoTaChiTiet.Length > 100)
                                {
                                    <span>...</span>
                                }
                            }
                        </p>
                        
                        <div class="book-details mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <div class="text-primary fw-bold h4 mb-0">
                                        @item.GiaTien.ToString("N0") VNĐ
                                    </div>
                                    <small class="text-muted">Giá bìa</small>
                                </div>
                                <div class="text-end">
                                    <div class="text-dark fw-bold">@item.SoLuongTon</div>
                                    <small class="text-muted">Số lượng</small>
                                </div>
                            </div>
                            
                            <div class="book-actions d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@item.MaSach" class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fas fa-info-circle me-1"></i>Chi tiết
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.MaSach" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaSach" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Phân trang -->
    <div class="bookstore-pagination mt-5">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
else
{
    <div class="text-center py-5 my-5">
        <div class="empty-state">
            <i class="fas fa-book fa-4x text-primary opacity-25 mb-4"></i>
            <h4 class="text-muted mb-3">Chưa có sách nào</h4>
            <p class="text-muted mb-4">Hãy thêm sách mới để bắt đầu quản lý kho sách của bạn</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle me-2"></i>Thêm sách đầu tiên
            </a>
        </div>
    </div>
}

<style>
    /* Custom styles cho giao diện sách */
    .bookstore-header {
        background: linear-gradient(135deg, #f8fafc 0%, #e8f0fe 100%);
        padding: 2rem;
        border-radius: 12px;
        border-left: 5px solid #1a73e8;
    }
    
    .book-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        overflow: hidden;
        background: white;
    }
    
    .book-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(26, 115, 232, 0.15) !important;
        border-color: #1a73e8;
    }
    
    .book-image-container {
        height: 200px;
        overflow: hidden;
        background: #f8fafc;
    }
    
    .book-cover-image {
        height: 100%;
        width: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .book-card:hover .book-cover-image {
        transform: scale(1.05);
    }
    
    .book-no-image {
        height: 100%;
        background: linear-gradient(135deg, #e8f0fe 0%, #d7e3fc 100%);
    }
    
    .book-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        z-index: 2;
    }
    
    .book-badge-out-of-stock {
        background-color: #fee;
        color: #d32f2f;
        border: 1px solid #ffcdd2;
    }
    
    .book-badge-low-stock {
        background-color: #fff3e0;
        color: #f57c00;
        border: 1px solid #ffe0b2;
    }
    
    .book-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(26, 115, 232, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .book-card:hover .book-overlay {
        opacity: 1;
    }
    
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .bg-light-blue {
        background-color: #e8f0fe !important;
        color: #1a73e8 !important;
    }
    
    .search-box {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }
    
    .search-box .form-control:focus {
        box-shadow: none;
        border-color: #1a73e8;
    }
    
    .btn-outline-primary.active {
        background-color: #1a73e8;
        color: white;
        border-color: #1a73e8;
    }
    
    .page-link {
        color: #1a73e8;
        border: 1px solid #dee2e6;
    }
    
    .page-link:hover {
        background-color: #e8f0fe;
        color: #0d47a1;
        border-color: #1a73e8;
    }
    
    .page-item.active .page-link {
        background-color: #1a73e8;
        border-color: #1a73e8;
    }
    
    .empty-state {
        max-width: 400px;
        margin: 0 auto;
    }
    
    .book-actions .btn {
        border-radius: 6px;
        padding: 8px 12px;
    }
    
    .book-actions .btn-outline-primary:hover {
        background-color: #1a73e8;
        color: white;
    }
    
    .book-actions .btn-outline-warning:hover {
        background-color: #fbbc05;
        color: #202124;
    }
    
    .book-actions .btn-outline-danger:hover {
        background-color: #ea4335;
        color: white;
    }
</style>

<!-- Font Awesome Icons (thêm vào nếu chưa có) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<script>
    // Thêm hiệu ứng tương tác
    document.addEventListener('DOMContentLoaded', function() {
        // Tìm kiếm
        const searchInput = document.querySelector('.search-box input');
        const searchButton = document.querySelector('.search-box button');
        
        searchButton.addEventListener('click', function() {
            const searchTerm = searchInput.value.trim();
            if (searchTerm) {
                alert('Đang tìm kiếm: ' + searchTerm);
                // Thực hiện tìm kiếm ở đây
            }
        });
        
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchButton.click();
            }
        });
        
        // Lọc sách
        const filterButtons = document.querySelectorAll('.btn-group .btn-outline-primary');
        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                
                // Thực hiện lọc ở đây
                const filterType = this.textContent.trim();
                console.log('Đang lọc theo:', filterType);
            });
        });
        
        // Hiệu ứng hover cho card
        const bookCards = document.querySelectorAll('.book-card');
        bookCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transition = 'all 0.3s ease';
            });
        });
    });
</script>