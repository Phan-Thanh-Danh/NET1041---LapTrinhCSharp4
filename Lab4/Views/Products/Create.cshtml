@model Lab4.Models.Product

@{
    ViewData["Title"] = "Create New Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg card-hover">
                <!-- Card Header -->
                <div class="card-header gradient-success text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="card-title mb-0">
                                <i class="bi bi-plus-circle-dotted me-2"></i>@ViewData["Title"]
                            </h3>
                            <p class="mb-0 opacity-75">Fill in the product details below</p>
                        </div>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                
                <!-- Card Body -->
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <h5 class="alert-heading">
                                <i class="bi bi-exclamation-triangle me-2"></i>Please fix the following errors:
                            </h5>
                        </div>
                        
                        <!-- Product Name Field -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="bi bi-tag me-2 text-primary"></i>Product Name
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-box text-primary"></i>
                                </span>
                                <input asp-for="Name" class="form-control" 
                                       placeholder="Enter product name" required />
                            </div>
                            <div class="form-text">Enter a descriptive name for your product</div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <!-- Price Field -->
                        <div class="mb-4">
                            <label asp-for="Price" class="form-label fw-bold">
                                <i class="bi bi-currency-dollar me-2 text-success"></i>Price
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-cash-coin text-success"></i>
                                </span>
                                <input asp-for="Price" type="number" step="0.01" 
                                       class="form-control" placeholder="0.00" required />
                                <span class="input-group-text">USD</span>
                            </div>
                            <div class="form-text">Enter the price in US dollars</div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        
                        <!-- Description Field -->
                        <div class="mb-5">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-file-text me-2 text-info"></i>Description
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light align-items-start">
                                    <i class="bi bi-chat-left-text text-info"></i>
                                </span>
                                <textarea asp-for="Description" class="form-control" 
                                          rows="5" placeholder="Enter product description..."></textarea>
                            </div>
                            <div class="form-text">Describe your product features and specifications</div>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        
                        <!-- Form Buttons -->
                        <div class="d-flex justify-content-between pt-4 border-top">
                            <button type="reset" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-clockwise me-2"></i>Reset Form
                            </button>
                            <div>
                                <a asp-action="Index" class="btn btn-outline-dark btn-lg me-3">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-success btn-lg px-5">
                                    <i class="bi bi-check-circle me-2"></i>Create Product
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                
                <!-- Card Footer -->
                <div class="card-footer bg-light py-3">
                    <div class="text-center text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        All fields marked with <span class="text-danger">*</span> are required
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}