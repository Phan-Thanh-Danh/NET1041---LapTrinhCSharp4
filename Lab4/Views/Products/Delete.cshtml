@model Lab4.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <!-- Warning Header -->
                <div class="card-header gradient-danger text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-20 rounded-circle p-3 me-4">
                            <i class="bi bi-exclamation-triangle display-6"></i>
                        </div>
                        <div>
                            <h3 class="card-title mb-0">
                                <i class="bi bi-trash me-2"></i>@ViewData["Title"]
                            </h3>
                            <p class="mb-0 opacity-75">This action cannot be undone</p>
                        </div>
                    </div>
                </div>
                
                <!-- Card Body -->
                <div class="card-body p-4 p-md-5">
                    <!-- Danger Alert -->
                    <div class="alert alert-danger border-danger" role="alert">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="bi bi-exclamation-octagon-fill fs-3"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="alert-heading">Warning!</h4>
                                <p class="mb-0">
                                    You are about to permanently delete this product. This action cannot be reversed.
                                    All associated data will be lost.
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Product Info Card -->
                    <div class="card border-danger mb-5">
                        <div class="card-header bg-danger bg-opacity-10 text-danger">
                            <h5 class="mb-0">
                                <i class="bi bi-box me-2"></i>Product to be deleted
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 text-center mb-3 mb-md-0">
                                    <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex p-4">
                                        <i class="bi bi-box text-danger fs-1"></i>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <dl class="row">
                                        <dt class="col-sm-4">Product ID:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-secondary">#@Model.Id</span>
                                        </dd>
                                        
                                        <dt class="col-sm-4">Product Name:</dt>
                                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Name)</dd>
                                        
                                        <dt class="col-sm-4">Price:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-success">$@Html.DisplayFor(model => model.Price)</span>
                                        </dd>
                                        
                                        <dt class="col-sm-4">Description:</dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.Description))
                                            {
                                                <p class="mb-0">@Model.Description</p>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">No description</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Confirmation Form -->
                    <form asp-action="Delete" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="alert alert-warning mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" 
                                       id="confirmDelete" required>
                                <label class="form-check-label fw-bold" for="confirmDelete">
                                    I understand that this action is permanent and cannot be undone
                                </label>
                                <div class="invalid-feedback">
                                    You must confirm before deleting
                                </div>
                            </div>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>Back to Safety
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.Id" 
                                   class="btn btn-info btn-lg me-3">
                                    <i class="bi bi-eye me-2"></i>View Details
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg px-5" 
                                        id="deleteButton" disabled>
                                    <i class="bi bi-trash-fill me-2"></i>Delete Product
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Enable delete button only when checkbox is checked
        document.getElementById('confirmDelete').addEventListener('change', function() {
            document.getElementById('deleteButton').disabled = !this.checked;
        });
        
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}