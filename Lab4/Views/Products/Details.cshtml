@model Lab4.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg card-hover">
                <!-- Card Header -->
                <div class="card-header gradient-info text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="card-title mb-0">
                                <i class="bi bi-eye me-2"></i>@ViewData["Title"]
                            </h3>
                            <p class="mb-0 opacity-75">View complete product information</p>
                        </div>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                
                <!-- Card Body -->
                <div class="card-body p-4 p-md-5">
                    <!-- Product Icon -->
                    <div class="text-center mb-5">
                        <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex p-4 mb-3">
                            <i class="bi bi-box text-info display-4"></i>
                        </div>
                        <h2 class="fw-bold text-dark">@Model.Name</h2>
                        <p class="text-muted">Product ID: #@Model.Id</p>
                    </div>
                    
                    <!-- Product Details -->
                    <div class="row g-4 mb-5">
                        <!-- Name Card -->
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center p-4">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                        <i class="bi bi-tag text-primary fs-4"></i>
                                    </div>
                                    <h6 class="card-subtitle mb-2 text-muted">Product Name</h6>
                                    <h5 class="card-title text-primary">@Model.Name</h5>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Price Card -->
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center p-4">
                                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                        <i class="bi bi-currency-dollar text-success fs-4"></i>
                                    </div>
                                    <h6 class="card-subtitle mb-2 text-muted">Price</h6>
                                    <h5 class="card-title text-success display-6">$@Model.Price</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Description Card -->
                    <div class="card border-0 shadow-sm mb-5">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-file-text me-2 text-info"></i>Product Description
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="card-text fs-5">@Model.Description</p>
                            }
                            else
                            {
                                <p class="card-text text-muted fst-italic">No description provided</p>
                            }
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-center pt-4 border-top">
                        <a asp-action="Edit" asp-route-id="@Model.Id" 
                           class="btn btn-warning btn-lg me-3">
                            <i class="bi bi-pencil-square me-2"></i>Edit Product
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" 
                           class="btn btn-outline-danger btn-lg me-3">
                            <i class="bi bi-trash me-2"></i>Delete
                        </a>
                        <a asp-action="Index" class="btn btn-outline-dark btn-lg">
                            <i class="bi bi-list-ul me-2"></i>All Products
                        </a>
                    </div>
                </div>
                
                <!-- Card Footer -->
                <div class="card-footer bg-light py-3">
                    <div class="row text-center text-muted">
                        <div class="col-md-4">
                            <i class="bi bi-calendar me-1"></i>Last Updated: Today
                        </div>
                        <div class="col-md-4">
                            <i class="bi bi-person me-1"></i>Viewed by Admin
                        </div>
                        <div class="col-md-4">
                            <i class="bi bi-shield-check me-1"></i>Verified Product
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>