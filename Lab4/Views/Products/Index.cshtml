@model IEnumerable<Lab4.Models.Product>

@{
    ViewData["Title"] = "Products Management";
}

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold text-primary mb-2">
                <i class="bi bi-box-seam me-2"></i>Product Management
            </h1>
            <p class="text-muted mb-0">Manage your product inventory efficiently</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Add New Product
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm gradient-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Total Products</h6>
                            <h2 class="card-title mb-0">@Model.Count()</h2>
                        </div>
                        <i class="bi bi-box-seam display-6 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <p class="mb-0">
                        <i class="bi bi-info-circle text-primary me-2"></i>
                        This table displays all products in your inventory. You can add, edit, view details, or delete products.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card border-0 shadow-lg card-hover">
        <div class="card-header gradient-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-table me-2"></i>Product List
                </h5>
                <span class="badge bg-light text-primary fs-6">
                    <i class="bi bi-filter me-1"></i>All Products
                </span>
            </div>
        </div>
        
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="py-3 px-4">
                                <i class="bi bi-tag me-2 text-primary"></i>Product Name
                            </th>
                            <th class="py-3 px-4">
                                <i class="bi bi-currency-dollar me-2 text-success"></i>Price
                            </th>
                            <th class="py-3 px-4">
                                <i class="bi bi-file-text me-2 text-info"></i>Description
                            </th>
                            <th class="py-3 px-4 text-center">
                                <i class="bi bi-gear me-2 text-warning"></i>Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-3 px-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi bi-box text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold">@Html.DisplayFor(modelItem => item.Name)</h6>
                                            <small class="text-muted">ID: #@item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3 px-4">
                                    <span class="badge bg-success bg-opacity-10 text-success badge-price">
                                        <i class="bi bi-currency-dollar me-1"></i>@Html.DisplayFor(modelItem => item.Price)
                                    </span>
                                </td>
                                <td class="py-3 px-4">
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="mb-0 text-truncate" style="max-width: 300px;" 
                                           data-bs-toggle="tooltip" data-bs-title="@item.Description">
                                            @item.Description
                                        </p>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No description</span>
                                    }
                                </td>
                                <td class="py-3 px-4 text-center">
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-outline-warning btn-sm me-2" 
                                           data-bs-toggle="tooltip" data-bs-title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-outline-info btn-sm me-2"
                                           data-bs-toggle="tooltip" data-bs-title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="btn btn-outline-danger btn-sm"
                                           data-bs-toggle="tooltip" data-bs-title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="card-footer bg-light py-3">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0 text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Showing <strong>@Model.Count()</strong> products
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Add Another Product
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Tooltips Initialization -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    })
</script>