@model Bai3.Models.DangKyKhoaHoc

@{
    ViewData["Title"] = "Thêm đăng ký";
}

<div class="container-fluid">
    <h1><i class="bi bi-clipboard-plus"></i> @ViewData["Title"]</h1>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="MaSinhVien" class="control-label">Sinh viên *</label>
                    <select asp-for="MaSinhVien" class="form-control" asp-items="ViewBag.MaSinhVien">
                        <option value="">-- Chọn sinh viên --</option>
                    </select>
                    <span asp-validation-for="MaSinhVien" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="MaKhoaHoc" class="control-label">Khóa học *</label>
                    <select asp-for="MaKhoaHoc" class="form-control" asp-items="ViewBag.MaKhoaHoc">
                        <option value="">-- Chọn khóa học --</option>
                    </select>
                    <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="NgayDangKy" class="control-label">Ngày đăng ký *</label>
                    <input asp-for="NgayDangKy" class="form-control" type="date" />
                    <span asp-validation-for="NgayDangKy" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="TrangThaiDangKy" class="control-label">Trạng thái *</label>
                    <select asp-for="TrangThaiDangKy" class="form-control">
                        <option value="Đã đăng ký" selected>Đã đăng ký</option>
                        <option value="Chờ duyệt">Chờ duyệt</option>
                        <option value="Đã hủy">Đã hủy</option>
                    </select>
                    <span asp-validation-for="TrangThaiDangKy" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}