@model Bai3.Models.DangKyKhoaHoc

@{
    ViewData["Title"] = "Chi tiết đăng ký";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-clipboard-check"></i> @ViewData["Title"]</h1>
        <div>
            <a asp-action="Edit" asp-route-maSinhVien="@Model.MaSinhVien" asp-route-maKhoaHoc="@Model.MaKhoaHoc" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin đăng ký -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Thông tin đăng ký</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Sinh viên:</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="SinhVien" asp-action="Details" asp-route-id="@Model.MaSinhVien">
                                @Model.SinhVien?.HoVaTen
                            </a>
                        </dd>

                        <dt class="col-sm-4">Khóa học:</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="KhoaHoc" asp-action="Details" asp-route-id="@Model.MaKhoaHoc">
                                @Model.KhoaHoc?.TenKhoaHoc
                            </a>
                        </dd>

                        <dt class="col-sm-4">Ngày đăng ký:</dt>
                        <dd class="col-sm-8">@Model.NgayDangKy.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.TrangThaiDangKy == "Đã đăng ký" ? "bg-success" : 
                                                Model.TrangThaiDangKy == "Chờ duyệt" ? "bg-warning" : "bg-danger")">
                                @Model.TrangThaiDangKy
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Thông tin khóa học -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-book"></i> Thông tin khóa học</h5>
                </div>
                <div class="card-body">
                    @if (Model.KhoaHoc != null)
                    {
                        <dl class="row">
                            <dt class="col-sm-5">Giảng viên:</dt>
                            <dd class="col-sm-7">
                                <a asp-controller="GiangVien" asp-action="Details" asp-route-id="@Model.KhoaHoc.MaGiangVien">
                                    @Model.KhoaHoc.GiangVien?.TenGiangVien
                                </a>
                            </dd>

                            <dt class="col-sm-5">Học phí:</dt>
                            <dd class="col-sm-7">@Model.KhoaHoc.HocPhi.ToString("N0") VNĐ</dd>

                            <dt class="col-sm-5">Số tín chỉ:</dt>
                            <dd class="col-sm-7">@Model.KhoaHoc.SoTinChi</dd>

                            <dt class="col-sm-5">Ngày bắt đầu:</dt>
                            <dd class="col-sm-7">@Model.KhoaHoc.NgayBatDau.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-5">Ngày kết thúc:</dt>
                            <dd class="col-sm-7">@(Model.KhoaHoc.NgayKetThuc?.ToString("dd/MM/yyyy") ?? "Chưa kết thúc")</dd>
                        </dl>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch sử thanh toán cho khóa học này -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5><i class="bi bi-cash-stack"></i> Lịch sử thanh toán</h5>
                    <a asp-controller="ThanhToan" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus"></i> Thêm thanh toán
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.ThanhToans != null && ((IEnumerable<dynamic>)ViewBag.ThanhToans).Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Ngày thanh toán</th>
                                    <th>Số tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Phương thức</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var thanhToan in (IEnumerable<dynamic>)ViewBag.ThanhToans)
                                {
                                    <tr>
                                        <td>@thanhToan.NgayThanhToan.ToString("dd/MM/yyyy")</td>
                                        <td>@thanhToan.SoTien.ToString("N0") VNĐ</td>
                                        <td>
                                            <span class="badge @(thanhToan.TrangThai == "Đã thanh toán" ? "bg-success" : "bg-warning")">
                                                @thanhToan.TrangThai
                                            </span>
                                        </td>
                                        <td>@thanhToan.PhuongThucThanhToan</td>
                                        <td>
                                            <a asp-controller="ThanhToan" asp-action="Details" asp-route-id="@thanhToan.MaThanhToan" 
                                               class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có thanh toán nào</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>