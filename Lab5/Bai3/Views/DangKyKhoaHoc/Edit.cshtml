@model Bai3.Models.DangKyKhoaHoc

@{
    ViewData["Title"] = "Sửa đăng ký";
}

<div class="container-fluid">
    <h1><i class="bi bi-pencil"></i> @ViewData["Title"]</h1>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaSinhVien" />
                <input type="hidden" asp-for="MaKhoaHoc" />
                
                <div class="form-group mb-3">
                    <label class="control-label">Sinh viên</label>
                    <input class="form-control" value="@Model.SinhVien?.HoVaTen" disabled />
                </div>
                
                <div class="form-group mb-3">
                    <label class="control-label">Khóa học</label>
                    <input class="form-control" value="@Model.KhoaHoc?.TenKhoaHoc" disabled />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="NgayDangKy" class="control-label">Ngày đăng ký *</label>
                    <input asp-for="NgayDangKy" class="form-control" type="date" />
                    <span asp-validation-for="NgayDangKy" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="TrangThaiDangKy" class="control-label">Trạng thái *</label>
                    <select asp-for="TrangThaiDangKy" class="form-control">
                        <option value="Đã đăng ký">Đã đăng ký</option>
                        <option value="Chờ duyệt">Chờ duyệt</option>
                        <option value="Đã hủy">Đã hủy</option>
                    </select>
                    <span asp-validation-for="TrangThaiDangKy" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Details" asp-route-maSinhVien="@Model.MaSinhVien" asp-route-maKhoaHoc="@Model.MaKhoaHoc" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}