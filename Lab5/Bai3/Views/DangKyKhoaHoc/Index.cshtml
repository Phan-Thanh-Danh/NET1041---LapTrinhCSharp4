@model IEnumerable<Bai3.Models.DangKyKhoaHoc>

@{
    ViewData["Title"] = "Danh sách đăng ký";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title"><i class="bi bi-card-checklist"></i> @ViewData["Title"]</h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Thêm đăng ký
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        Chưa có lượt đăng ký nào.
    </div>
}
else
{
    <div class="card-grid">
        @foreach (var item in Model)
        {
            <div class="item-card">
                <div class="card-body">
                    <h5 class="card-title">@item.KhoaHoc?.TenKhoaHoc</h5>
                    <p class="card-text text-muted">SV: @item.SinhVien?.HoVaTen</p>
                    <hr>
                    <p class="card-text"><i class="bi bi-calendar-check-fill"></i> Ngày ĐK: @item.NgayDangKy.ToString("dd/MM/yyyy")</p>
                    <p class="card-text">
                        <i class="bi bi-flag-fill"></i> Trạng thái: 
                        <span class="badge bg-success">@item.TrangThaiDangKy</span>
                    </p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-maSinhVien="@item.MaSinhVien" asp-route-maKhoaHoc="@item.MaKhoaHoc" title="Chi tiết">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-maSinhVien="@item.MaSinhVien" asp-route-maKhoaHoc="@item.MaKhoaHoc" title="Chỉnh sửa">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-maSinhVien="@item.MaSinhVien" asp-route-maKhoaHoc="@item.MaKhoaHoc" title="Xóa">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </div>
        }
    </div>
}
