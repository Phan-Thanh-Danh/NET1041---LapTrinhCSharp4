@model Bai3.Models.GiangVien

@{
    ViewData["Title"] = "Xóa giảng viên";
}

<div class="container-fluid">
    <h1><i class="bi bi-trash"></i> @ViewData["Title"]</h1>
    <hr />
    
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle"></i> Cảnh báo</h4>
        <p>Bạn có chắc chắn muốn xóa giảng viên này? Hành động này không thể hoàn tác!</p>
        <p class="mb-0"><strong>Lưu ý:</strong> Các khóa học do giảng viên này dạy sẽ bị set NULL.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="bi bi-person-badge"></i> Thông tin giảng viên sẽ bị xóa</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Mã giảng viên:</dt>
                <dd class="col-sm-8">@Model.MaGiangVien</dd>

                <dt class="col-sm-4">Tên giảng viên:</dt>
                <dd class="col-sm-8">@Model.TenGiangVien</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Số điện thoại:</dt>
                <dd class="col-sm-8">@Model.SoDienThoai</dd>

                <dt class="col-sm-4">Học vị:</dt>
                <dd class="col-sm-8">@Model.HocVi</dd>

                <dt class="col-sm-4">Chuyên ngành:</dt>
                <dd class="col-sm-8">@Model.ChuyenNganh</dd>
            </dl>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning">
                    <h6><i class="bi bi-exclamation-circle"></i> Ảnh hưởng đến dữ liệu</h6>
                </div>
                <div class="card-body">
                    <ul>
                        <li>Số khóa học đang dạy: @(ViewBag.SoKhoaHoc ?? 0)</li>
                        <li>Số sinh viên đang học: @(ViewBag.SoSinhVien ?? 0)</li>
                    </ul>
                    <p class="text-danger mb-0">
                        <i class="bi bi-info-circle"></i> Các khóa học sẽ không bị xóa, chỉ set NULL cho giảng viên.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="MaGiangVien" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Xác nhận xóa
            </button>
            <a asp-action="Details" asp-route-id="@Model.MaGiangVien" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>