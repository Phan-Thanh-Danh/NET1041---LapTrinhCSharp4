@model Bai3.Models.GiangVien

@{
    ViewData["Title"] = "Chi tiết giảng viên";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-person-badge"></i> @ViewData["Title"]</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaGiangVien" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin cơ bản -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Thông tin giảng viên</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Mã giảng viên:</dt>
                        <dd class="col-sm-8">@Model.MaGiangVien</dd>

                        <dt class="col-sm-4">Tên giảng viên:</dt>
                        <dd class="col-sm-8">@Model.TenGiangVien</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@Model.SoDienThoai</dd>

                        <dt class="col-sm-4">Học vị:</dt>
                        <dd class="col-sm-8">@Model.HocVi</dd>

                        <dt class="col-sm-4">Chuyên ngành:</dt>
                        <dd class="col-sm-8">@Model.ChuyenNganh</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Các khóa học đang dạy -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-book"></i> Khóa học đang dạy</h5>
                </div>
                <div class="card-body">
                    @if (Model.KhoaHocs != null && Model.KhoaHocs.Any())
                    {
                        <div class="list-group">
                            @foreach (var khoaHoc in Model.KhoaHocs)
                            {
                                <a asp-controller="KhoaHoc" asp-action="Details" asp-route-id="@khoaHoc.MaKhoaHoc" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="mb-1">@khoaHoc.TenKhoaHoc</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar"></i> 
                                                @khoaHoc.NgayBatDau.ToString("dd/MM/yyyy") - 
                                                @(khoaHoc.NgayKetThuc?.ToString("dd/MM/yyyy") ?? "Đang diễn ra")
                                            </small>
                                        </div>
                                        <span class="badge bg-primary">@khoaHoc.SoTinChi tín chỉ</span>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có khóa học nào</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê -->
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-book"></i></h5>
                    <h2 class="card-text">@(Model.KhoaHocs?.Count ?? 0)</h2>
                    <p class="card-text">Khóa học</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i></h5>
                    <h2 class="card-text">@(ViewBag.TongSinhVien ?? 0)</h2>
                    <p class="card-text">Sinh viên đã dạy</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-cash-stack"></i></h5>
                    <h2 class="card-text">@((ViewBag.TongHocPhi ?? 0).ToString("N0")) VNĐ</h2>
                    <p class="card-text">Tổng học phí</p>
                </div>
            </div>
        </div>
    </div>
</div>