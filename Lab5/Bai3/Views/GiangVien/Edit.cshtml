@model Bai3.Models.GiangVien

@{
    ViewData["Title"] = "Sửa giảng viên";
}

<div class="container-fluid">
    <h1><i class="bi bi-pencil"></i> @ViewData["Title"]</h1>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaGiangVien" />
                
                <div class="form-group mb-3">
                    <label asp-for="TenGiangVien" class="control-label">Tên giảng viên *</label>
                    <input asp-for="TenGiangVien" class="form-control" />
                    <span asp-validation-for="TenGiangVien" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label">Email *</label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="SoDienThoai" class="control-label">Số điện thoại *</label>
                    <input asp-for="SoDienThoai" class="form-control" />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="HocVi" class="control-label">Học vị</label>
                    <select asp-for="HocVi" class="form-control">
                        <option value="">-- Chọn học vị --</option>
                        <option value="Cử nhân">Cử nhân</option>
                        <option value="Thạc sĩ">Thạc sĩ</option>
                        <option value="Tiến sĩ">Tiến sĩ</option>
                        <option value="Phó giáo sư">Phó giáo sư</option>
                        <option value="Giáo sư">Giáo sư</option>
                    </select>
                    <span asp-validation-for="HocVi" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="ChuyenNganh" class="control-label">Chuyên ngành</label>
                    <input asp-for="ChuyenNganh" class="form-control" />
                    <span asp-validation-for="ChuyenNganh" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.MaGiangVien" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}