@model Bai3.Models.KhoaHoc

@{
    ViewData["Title"] = "Chi tiết khóa học";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-book"></i> @ViewData["Title"]</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaKhoaHoc" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin cơ bản -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Thông tin khóa học</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Mã khóa học:</dt>
                        <dd class="col-sm-8">@Model.MaKhoaHoc</dd>

                        <dt class="col-sm-4">Tên khóa học:</dt>
                        <dd class="col-sm-8">@Model.TenKhoaHoc</dd>

                        <dt class="col-sm-4">Giảng viên:</dt>
                        <dd class="col-sm-8">
                            @if (Model.GiangVien != null)
                            {
                                <a asp-controller="GiangVien" asp-action="Details" asp-route-id="@Model.GiangVien.MaGiangVien">
                                    @Model.GiangVien.TenGiangVien
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Chưa có giảng viên</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Ngày bắt đầu:</dt>
                        <dd class="col-sm-8">@Model.NgayBatDau.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Ngày kết thúc:</dt>
                        <dd class="col-sm-8">@(Model.NgayKetThuc?.ToString("dd/MM/yyyy") ?? "Chưa kết thúc")</dd>

                        <dt class="col-sm-4">Số tín chỉ:</dt>
                        <dd class="col-sm-8">@Model.SoTinChi</dd>

                        <dt class="col-sm-4">Học phí:</dt>
                        <dd class="col-sm-8">@Model.HocPhi.ToString("N0") VNĐ</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Danh sách sinh viên đã đăng ký -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5><i class="bi bi-people"></i> Sinh viên đã đăng ký (@(Model.DangKyKhoaHocs?.Count ?? 0))</h5>
                    <a asp-controller="DangKyKhoaHoc" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus"></i> Thêm sinh viên
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.DangKyKhoaHocs != null && Model.DangKyKhoaHocs.Any())
                    {
                        <div class="list-group">
                            @foreach (var dangKy in Model.DangKyKhoaHocs)
                            {
                                <a asp-controller="SinhVien" asp-action="Details" asp-route-id="@dangKy.MaSinhVien" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@dangKy.SinhVien.HoVaTen</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar"></i> 
                                                Đăng ký: @dangKy.NgayDangKy.ToString("dd/MM/yyyy")
                                            </small>
                                        </div>
                                        <span class="badge bg-info">@dangKy.TrangThaiDangKy</span>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có sinh viên đăng ký</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch sử thanh toán -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-cash-stack"></i> Lịch sử thanh toán</h5>
                </div>
                <div class="card-body">
                    @if (Model.ThanhToans != null && Model.ThanhToans.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Sinh viên</th>
                                    <th>Số tiền</th>
                                    <th>Ngày thanh toán</th>
                                    <th>Trạng thái</th>
                                    <th>Phương thức</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var thanhToan in Model.ThanhToans)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="SinhVien" asp-action="Details" asp-route-id="@thanhToan.MaSinhVien">
                                                @thanhToan.SinhVien.HoVaTen
                                            </a>
                                        </td>
                                        <td>@thanhToan.SoTien.ToString("N0") VNĐ</td>
                                        <td>@thanhToan.NgayThanhToan.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge @(thanhToan.TrangThai == "Đã thanh toán" ? "bg-success" : "bg-warning")">
                                                @thanhToan.TrangThai
                                            </span>
                                        </td>
                                        <td>@thanhToan.PhuongThucThanhToan</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có thanh toán nào</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>