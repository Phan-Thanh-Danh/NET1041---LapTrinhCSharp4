@model Bai3.Models.KhoaHoc

@{
    ViewData["Title"] = "Sửa khóa học";
}

<div class="container-fluid">
    <h1><i class="bi bi-pencil"></i> @ViewData["Title"]</h1>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaKhoaHoc" />
                
                <div class="form-group mb-3">
                    <label asp-for="TenKhoaHoc" class="control-label">Tên khóa học *</label>
                    <input asp-for="TenKhoaHoc" class="form-control" />
                    <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="NgayBatDau" class="control-label">Ngày bắt đầu *</label>
                    <input asp-for="NgayBatDau" class="form-control" type="date" />
                    <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="NgayKetThuc" class="control-label">Ngày kết thúc</label>
                    <input asp-for="NgayKetThuc" class="form-control" type="date" />
                    <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="SoTinChi" class="control-label">Số tín chỉ *</label>
                    <input asp-for="SoTinChi" class="form-control" type="number" min="1" max="10" />
                    <span asp-validation-for="SoTinChi" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="HocPhi" class="control-label">Học phí (VNĐ) *</label>
                    <input asp-for="HocPhi" class="form-control" type="number" min="0" step="100000" />
                    <span asp-validation-for="HocPhi" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="MaGiangVien" class="control-label">Giảng viên</label>
                    <select asp-for="MaGiangVien" class="form-control" asp-items="ViewBag.MaGiangVien">
                        <option value="">-- Chọn giảng viên --</option>
                    </select>
                    <span asp-validation-for="MaGiangVien" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.MaKhoaHoc" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}