<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý Khóa học</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a class="sidebar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="bi bi-book-fill"></i>
            <span>Quản lý</span>
        </a>
        <hr>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                   asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i> <span>Trang chủ</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "SinhVien" ? "active" : "")"
                   asp-controller="SinhVien" asp-action="Index">
                    <i class="bi bi-people"></i> <span>Sinh viên</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "GiangVien" ? "active" : "")"
                   asp-controller="GiangVien" asp-action="Index">
                    <i class="bi bi-person-badge"></i> <span>Giảng viên</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "KhoaHoc" ? "active" : "")"
                   asp-controller="KhoaHoc" asp-action="Index">
                    <i class="bi bi-journal-bookmark"></i> <span>Khóa học</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "DangKyKhoaHoc" ? "active" : "")"
                   asp-controller="DangKyKhoaHoc" asp-action="Index">
                    <i class="bi bi-card-checklist"></i> <span>Đăng ký</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ThanhToan" ? "active" : "")"
                   asp-controller="ThanhToan" asp-action="Index">
                    <i class="bi bi-credit-card"></i> <span>Thanh toán</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light topbar">
            <div class="container-fluid">
                <button class="btn btn-primary" id="sidebarToggle"><i class="bi bi-list"></i></button>
                <span class="navbar-text ms-auto">
                    Chào mừng trở lại!
                </span>
            </div>
        </nav>

        <div class="container-fluid p-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer text-muted footer-custom">
            <div class="container text-center py-3">
                &copy; 2026 - Quản lý Khóa học
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>