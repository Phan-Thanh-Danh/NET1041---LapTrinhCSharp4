@model Bai3.Models.SinhVien

@{
    ViewData["Title"] = "Xóa sinh viên";
}

<div class="container-fluid">
    <h1><i class="bi bi-trash"></i> @ViewData["Title"]</h1>
    <hr />
    
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle"></i> Cảnh báo</h4>
        <p>Bạn có chắc chắn muốn xóa sinh viên này? Hành động này không thể hoàn tác!</p>
        <p class="mb-0"><strong>Lưu ý:</strong> Tất cả đăng ký và thanh toán liên quan cũng sẽ bị xóa.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="bi bi-person"></i> Thông tin sinh viên sẽ bị xóa</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Mã sinh viên:</dt>
                <dd class="col-sm-8">@Model.MaSinhVien</dd>

                <dt class="col-sm-4">Họ và tên:</dt>
                <dd class="col-sm-8">@Model.HoVaTen</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Số điện thoại:</dt>
                <dd class="col-sm-8">@Model.SoDienThoai</dd>

                <dt class="col-sm-4">Ngày sinh:</dt>
                <dd class="col-sm-8">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "N/A")</dd>
            </dl>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning">
                    <h6><i class="bi bi-exclamation-circle"></i> Dữ liệu liên quan sẽ bị xóa</h6>
                </div>
                <div class="card-body">
                    <ul>
                        <li>Số đăng ký khóa học: @(ViewBag.SoDangKy ?? 0)</li>
                        <li>Số thanh toán: @(ViewBag.SoThanhToan ?? 0)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="MaSinhVien" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Xác nhận xóa
            </button>
            <a asp-action="Details" asp-route-id="@Model.MaSinhVien" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>