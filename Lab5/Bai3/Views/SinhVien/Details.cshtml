@model Bai3.Models.SinhVien

@{
    ViewData["Title"] = "Chi tiết sinh viên";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-person"></i> @ViewData["Title"]</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaSinhVien" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin cơ bản -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Mã sinh viên:</dt>
                        <dd class="col-sm-8">@Model.MaSinhVien</dd>

                        <dt class="col-sm-4">Họ và tên:</dt>
                        <dd class="col-sm-8">@Model.HoVaTen</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@Model.SoDienThoai</dd>

                        <dt class="col-sm-4">Ngày sinh:</dt>
                        <dd class="col-sm-8">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "N/A")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Các khóa học đã đăng ký -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5><i class="bi bi-book"></i> Khóa học đã đăng ký</h5>
                    <a asp-controller="DangKyKhoaHoc" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus"></i> Đăng ký mới
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.DangKyKhoaHocs != null && Model.DangKyKhoaHocs.Any())
                    {
                        <div class="list-group">
                            @foreach (var dangKy in Model.DangKyKhoaHocs)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="mb-1">@dangKy.KhoaHoc.TenKhoaHoc</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar"></i> 
                                                @dangKy.NgayDangKy.ToString("dd/MM/yyyy")
                                            </small>
                                        </div>
                                        <span class="badge bg-info">@dangKy.TrangThaiDangKy</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Chưa đăng ký khóa học nào</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch sử thanh toán -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-cash-stack"></i> Lịch sử thanh toán</h5>
                </div>
                <div class="card-body">
                    @if (Model.ThanhToans != null && Model.ThanhToans.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Khóa học</th>
                                    <th>Số tiền</th>
                                    <th>Ngày thanh toán</th>
                                    <th>Trạng thái</th>
                                    <th>Phương thức</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var thanhToan in Model.ThanhToans)
                                {
                                    <tr>
                                        <td>@thanhToan.KhoaHoc.TenKhoaHoc</td>
                                        <td>@thanhToan.SoTien.ToString("N0") VNĐ</td>
                                        <td>@thanhToan.NgayThanhToan.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge @(thanhToan.TrangThai == "Đã thanh toán" ? "bg-success" : "bg-warning")">
                                                @thanhToan.TrangThai
                                            </span>
                                        </td>
                                        <td>@thanhToan.PhuongThucThanhToan</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có lịch sử thanh toán</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>