@model IEnumerable<Bai3.Models.SinhVien>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title"><i class="bi bi-people"></i> @ViewData["Title"]</h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-person-plus"></i> Thêm sinh viên
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        Chưa có sinh viên nào trong danh sách.
    </div>
}
else
{
    <div class="card-grid">
        @foreach (var item in Model)
        {
            <div class="item-card">
                <div class="card-body">
                    <h5 class="card-title">@item.HoVaTen</h5>
                    <p class="card-text text-muted">Mã SV: @item.MaSinhVien</p>
                    <hr>
                    <p class="card-text"><i class="bi bi-envelope-fill"></i> @(item.Email ?? "Chưa có")</p>
                    <p class="card-text"><i class="bi bi-telephone-fill"></i> @(item.SoDienThoai ?? "Chưa có")</p>
                    <p class="card-text"><i class="bi bi-calendar-event-fill"></i> @(item.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa có")</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.MaSinhVien" title="Chi tiết">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.MaSinhVien" title="Chỉnh sửa">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.MaSinhVien" title="Xóa">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </div>
        }
    </div>
}
