@model Bai3.Models.ThanhToan

@{
    ViewData["Title"] = "Chi tiết thanh toán";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-cash-stack"></i> @ViewData["Title"]</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaThanhToan" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin thanh toán -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Thông tin thanh toán</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Mã thanh toán:</dt>
                        <dd class="col-sm-8">@Model.MaThanhToan</dd>

                        <dt class="col-sm-4">Sinh viên:</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="SinhVien" asp-action="Details" asp-route-id="@Model.MaSinhVien">
                                @Model.SinhVien?.HoVaTen
                            </a>
                        </dd>

                        <dt class="col-sm-4">Khóa học:</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="KhoaHoc" asp-action="Details" asp-route-id="@Model.MaKhoaHoc">
                                @Model.KhoaHoc?.TenKhoaHoc
                            </a>
                        </dd>

                        <dt class="col-sm-4">Số tiền:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary fs-6">
                                @Model.SoTien.ToString("N0") VNĐ
                            </span>
                        </dd>

                        <dt class="col-sm-4">Ngày thanh toán:</dt>
                        <dd class="col-sm-8">@Model.NgayThanhToan.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.TrangThai == "Đã thanh toán" ? "bg-success" : 
                                                Model.TrangThai == "Chưa thanh toán" ? "bg-warning" : "bg-danger")">
                                @Model.TrangThai
                            </span>
                        </dd>

                        <dt class="col-sm-4">Phương thức:</dt>
                        <dd class="col-sm-8">@Model.PhuongThucThanhToan</dd>

                        <dt class="col-sm-4">Ghi chú:</dt>
                        <dd class="col-sm-8">@Model.GhiChu</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Thông tin bổ sung -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-calculator"></i> Chi tiết khóa học</h5>
                </div>
                <div class="card-body">
                    @if (Model.KhoaHoc != null)
                    {
                        <dl class="row">
                            <dt class="col-sm-5">Học phí gốc:</dt>
                            <dd class="col-sm-7">@Model.KhoaHoc.HocPhi.ToString("N0") VNĐ</dd>

                            <dt class="col-sm-5">Đã thanh toán:</dt>
                            <dd class="col-sm-7">@Model.SoTien.ToString("N0") VNĐ</dd>

                            <dt class="col-sm-5">Còn nợ:</dt>
                            <dd class="col-sm-7">
                                @{
                                    var conNo = Model.KhoaHoc.HocPhi - Model.SoTien;
                                    var badgeClass = conNo > 0 ? "bg-danger" : "bg-success";
                                }
                                <span class="badge @badgeClass">
                                    @Math.Max(0, conNo).ToString("N0") VNĐ
                                </span>
                            </dd>

                            <dt class="col-sm-5">Giảng viên:</dt>
                            <dd class="col-sm-7">@Model.KhoaHoc.GiangVien?.TenGiangVien</dd>

                            <dt class="col-sm-5">Ngày bắt đầu:</dt>
                            <dd class="col-sm-7">@Model.KhoaHoc.NgayBatDau.ToString("dd/MM/yyyy")</dd>
                        </dl>
                    }
                </div>
            </div>
        </div>
    </div>
</div>