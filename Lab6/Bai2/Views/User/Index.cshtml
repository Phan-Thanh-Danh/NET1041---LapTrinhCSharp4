@model IEnumerable<Bai2.Models.User>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<div class="container mt-5">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="fw-bold text-dark"><i class="bi bi-people-fill text-primary me-2"></i>Quản Lý Người Dùng</h2>
            <p class="text-muted">Xem và quản lý danh sách thành viên trong hệ thống.</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary d-flex align-items-center shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>Thêm Mới
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4 py-3" style="width: 50px;">ID</th>
                        <th class="py-3">Thông Tin Người Dùng</th>
                        <th class="py-3">Liên Hệ</th>
                        <th class="text-end pe-4 py-3" style="width: 200px;">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-muted fw-bold">#@item.Id</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="d-flex align-items-center justify-content-center bg-primary bg-opacity-10 text-primary rounded-circle me-3" style="width: 40px; height: 40px; font-weight: 600;">
                                        @item.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.Name</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-muted">
                                <i class="bi bi-envelope me-2 small"></i>@item.Email
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm text-primary me-2" title="Chỉnh sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light btn-sm text-danger" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
