@model Bai1.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="row justify-content-center py-4 text-center">
    <div class="col-md-10 col-lg-8">
        <div class="glass-card overflow-hidden border-0 shadow-lg">
            <!-- Header/Cover Area -->
            <div style="background: var(--primary-gradient); height: 120px;"></div>
            
            <div class="px-3 px-md-4 pb-5" style="margin-top: -60px;">
                <!-- Avatar -->
                <div class="avatar-lg bg-white p-1 rounded-circle shadow mx-auto mb-3" style="width: 120px; height: 120px;">
                    <div class="w-100 h-100 rounded-circle bg-light d-flex align-items-center justify-content-center text-primary fw-bold fs-1">
                        @(Model.FirstName?.Substring(0, 1))@(Model.LastName?.Substring(0, 1))
                    </div>
                </div>

                <h2 class="fw-800 mb-1" style="font-weight: 800;">@Model.FirstName @Model.LastName</h2>
                <p class="text-muted mb-4"><span class="badge bg-light text-dark border">Student ID: #@Model.StudentId</span></p>

                <div class="row g-4 text-start justify-content-center mt-2 mx-0">
                    <div class="col-md-5 px-2">
                        <div class="p-3 border rounded-4 bg-light bg-opacity-50 h-100">
                            <label class="small text-uppercase text-muted fw-bold mb-1 d-block tracking-wider">Email Address</label>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-envelope me-2 text-primary"></i>
                                <span class="fw-500 text-break">@(string.IsNullOrEmpty(Model.Email) ? "Not provided" : Model.Email)</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 px-2">
                        <div class="p-3 border rounded-4 bg-light bg-opacity-50 h-100">
                            <label class="small text-uppercase text-muted fw-bold mb-1 d-block tracking-wider">Birthday</label>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-check me-2 text-primary"></i>
                                <span class="fw-500">@(Model.DateOfBirth?.ToString("MMMM dd, yyyy") ?? "Not provided")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-5 d-flex flex-wrap justify-content-center gap-3 px-3">
                    <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning rounded-pill px-5 fw-bold text-dark">
                        <i class="bi bi-pencil-square me-2"></i> Edit Profile
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.StudentId" class="btn btn-outline-danger rounded-pill px-5 fw-bold">
                        <i class="bi bi-trash me-2"></i> Delete Account
                    </a>
                </div>
                
                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-link text-muted text-decoration-none small">
                        <i class="bi bi-arrow-left me-1"></i> Back to Student Directory
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
