@model Bai2.ViewModels.CreateOrderViewModel

@{
    ViewData["Title"] = "Tạo đơn hàng mới";
}

<div class="container mt-4">
    <h2><i class="bi bi-plus-circle"></i> @ViewData["Title"]</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-10 mx-auto">
            <form asp-action="Create" method="post" id="orderForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="card mb-3 shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-person-fill"></i> Thông tin đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="OrderDate" class="form-label"></label>
                                <input asp-for="OrderDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="OrderDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CustomerName" class="form-label"></label>
                                <input asp-for="CustomerName" class="form-control" placeholder="Nhập tên khách hàng" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-box-seam"></i> Chi tiết sản phẩm</h5>
                        <button type="button" class="btn btn-light btn-sm" onclick="addOrderDetail()">
                            <i class="bi bi-plus-circle"></i> Thêm sản phẩm
                        </button>
                    </div>
                    <div class="card-body">
                        <div id="orderDetailsContainer">
                            <!-- Order details will be added here dynamically -->
                        </div>
                        <div class="alert alert-info" id="emptyMessage">
                            <i class="bi bi-info-circle"></i> Chưa có sản phẩm nào. Nhấn "Thêm sản phẩm" để thêm.
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-8 text-end">
                                <h5 class="mb-0"><strong>Tổng tiền:</strong></h5>
                            </div>
                            <div class="col-md-4 text-end">
                                <h5 class="mb-0"><strong class="text-danger" id="totalAmount">0 VNĐ</strong></h5>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle"></i> Tạo đơn hàng
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        let detailIndex = 0;

        function addOrderDetail() {
            const container = document.getElementById('orderDetailsContainer');
            const emptyMessage = document.getElementById('emptyMessage');
            
            const detailHtml = `
                <div class="card mb-3 border-secondary order-detail-item" id="detail-${detailIndex}">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-2">
                                <label class="form-label fw-bold">Mã SP <span class="text-danger">*</span></label>
                                <input type="number" name="OrderDetails[${detailIndex}].ProductId" class="form-control" required min="1" placeholder="Nhập mã" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                                <input type="text" name="OrderDetails[${detailIndex}].ProductName" class="form-control" required maxlength="100" placeholder="Nhập tên sản phẩm" />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label fw-bold">Số lượng <span class="text-danger">*</span></label>
                                <input type="number" name="OrderDetails[${detailIndex}].Quantity" class="form-control quantity-input" required min="1" value="1" onchange="calculateTotal()" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Đơn giá (VNĐ) <span class="text-danger">*</span></label>
                                <input type="number" name="OrderDetails[${detailIndex}].UnitPrice" class="form-control price-input" required min="0" step="1000" placeholder="0" onchange="calculateTotal()" />
                            </div>
                            <div class="col-md-1 d-flex align-items-end">
                                <button type="button" class="btn btn-danger w-100" onclick="removeOrderDetail(${detailIndex})" title="Xóa sản phẩm">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            container.insertAdjacentHTML('beforeend', detailHtml);
            emptyMessage.style.display = 'none';
            detailIndex++;
        }

        function removeOrderDetail(index) {
            const element = document.getElementById(`detail-${index}`);
            if (element) {
                element.remove();
            }
            
            const container = document.getElementById('orderDetailsContainer');
            const emptyMessage = document.getElementById('emptyMessage');
            
            if (container.children.length === 0) {
                emptyMessage.style.display = 'block';
            }
            
            calculateTotal();
        }

        function calculateTotal() {
            let total = 0;
            const quantities = document.querySelectorAll('.quantity-input');
            const prices = document.querySelectorAll('.price-input');
            
            quantities.forEach((qty, index) => {
                const quantity = parseFloat(qty.value) || 0;
                const price = parseFloat(prices[index].value) || 0;
                total += quantity * price;
            });
            
            document.getElementById('totalAmount').textContent = total.toLocaleString('vi-VN') + ' VNĐ';
        }

        // Add first order detail on page load
        document.addEventListener('DOMContentLoaded', function() {
            addOrderDetail();
        });

        // Validate form before submit
        document.getElementById('orderForm').addEventListener('submit', function(e) {
            const container = document.getElementById('orderDetailsContainer');
            if (container.children.length === 0) {
                e.preventDefault();
                alert('Vui lòng thêm ít nhất một sản phẩm vào đơn hàng!');
                return false;
            }
        });
    </script>
}

<style>
    .order-detail-item {
        animation: fadeIn 0.3s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-label.fw-bold {
        color: #333;
    }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        opacity: 1;
    }
</style>
