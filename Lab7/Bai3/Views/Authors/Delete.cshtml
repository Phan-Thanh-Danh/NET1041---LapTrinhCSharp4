@model Bai3.Models.Author

@{
    ViewData["Title"] = "Xóa tác giả";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> 
                        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa tác giả này không?
                    </div>

                    @if (Model.Books.Any())
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle"></i> 
                            <strong>Không thể xóa!</strong> Tác giả này có <strong>@Model.Books.Count</strong> sách liên quan. 
                            Vui lòng xóa các sách trước khi xóa tác giả.
                        </div>

                        <h6 class="mb-2">Danh sách sách:</h6>
                        <ul class="list-group mb-3">
                            @foreach (var book in Model.Books)
                            {
                                <li class="list-group-item">
                                    @book.BookTitle 
                                    <a asp-controller="Books" asp-action="Details" 
                                       asp-route-id="@book.BookId" class="btn btn-sm btn-info float-end">
                                        <i class="bi bi-eye"></i> Xem
                                    </a>
                                </li>
                            }
                        </ul>

                        <div class="d-grid">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    }
                    else
                    {
                        <dl class="row">
                            <dt class="col-sm-4">ID:</dt>
                            <dd class="col-sm-8">@Model.AuthorId</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AuthorName):</dt>
                            <dd class="col-sm-8">@Model.AuthorName</dd>

                            <dt class="col-sm-4">Số lượng sách:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success">0</span>
                            </dd>
                        </dl>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="AuthorId" />
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Hủy
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Xác nhận xóa
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
