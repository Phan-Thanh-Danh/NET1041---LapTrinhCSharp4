@model IEnumerable<Bai3.Models.Author>

@{
    ViewData["Title"] = "Quản lý Tác giả";
}

<div class="top-bar d-flex justify-content-between align-items-center">
    <div>
        <h2 class="fw-bold text-dark mb-1">@ViewData["Title"]</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Tác giả</li>
            </ol>
        </nav>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Thêm tác giả
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success border-0 shadow-sm mb-4 animate-fade-in">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
    </div>
}

<div class="card-grid animate-fade-in">
    @foreach (var item in Model)
    {
        bool hasBooks = item.Books != null && item.Books.Any();
        <div class="card border-0">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div class="avatar-lg bg-icon-purple rounded-3 d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                        <span class="fw-bold text-icon-purple fs-4">@item.AuthorName.Substring(0, 1).ToUpper()</span>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm border-0" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.AuthorId"><i class="bi bi-pencil me-2 text-icon-orange"></i> Edit</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.AuthorId"><i class="bi bi-info-circle me-2 text-icon-blue"></i> Details</a></li>
                            @if (!hasBooks)
                            {
                                <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.AuthorId"><i class="bi bi-trash me-2"></i> Delete</a></li>
                            }
                        </ul>
                    </div>
                </div>

                <h4 class="card-title text-dark">@item.AuthorName</h4>
                <p class="text-muted small mb-4">Author ID: #@item.AuthorId</p>

                <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                    <div class="text-muted small">
                        <i class="bi bi-book me-1"></i> @(item.Books?.Count ?? 0) tác phẩm
                    </div>
                    @if (hasBooks)
                    {
                        <span class="badge bg-light text-muted border px-2 py-1 small">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-light text-muted border px-2 py-1 small italic">New</span>
                    }
                </div>
            </div>
        </div>
    }
</div>
