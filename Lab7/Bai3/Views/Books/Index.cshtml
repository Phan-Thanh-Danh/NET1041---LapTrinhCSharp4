@model IEnumerable<Bai3.Models.Book>

@{
    ViewData["Title"] = "Quản lý Sách";
}

<div class="top-bar d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-1">@ViewData["Title"]</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Sách</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex gap-2">
        <form asp-action="Index" method="get" class="d-flex align-items-center gap-2">
            <select name="authorId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Authors" onchange="this.form.submit()">
                <option value="">-- Tất cả tác giả --</option>
            </select>
            @if (ViewBag.CurrentAuthorId != null)
            {
                <a asp-action="Index" class="btn btn-light border-0 shadow-sm text-muted" title="Xóa lọc">
                    <i class="bi bi-x-lg"></i>
                </a>
            }
        </form>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Thêm sách mới
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success border-0 shadow-sm mb-4 animate-fade-in">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
    </div>
}

<div class="card-grid animate-fade-in">
    @foreach (var item in Model)
    {
        <div class="card border-0">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="bg-icon-blue p-3 rounded-3">
                        <i class="bi bi-journal-text text-icon-blue fs-4"></i>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm border-0" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.BookId"><i class="bi bi-pencil me-2 text-icon-orange"></i> Edit</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.BookId"><i class="bi bi-info-circle me-2 text-icon-blue"></i> Details</a></li>
                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.BookId"><i class="bi bi-trash me-2"></i> Delete</a></li>
                        </ul>
                    </div>
                </div>

                <h4 class="card-title text-dark">@item.BookTitle</h4>
                
                <div class="mb-4">
                    <div class="d-flex align-items-center text-muted small mb-1">
                        <i class="bi bi-person me-2 text-icon-purple"></i>
                        <span class="fw-medium">@item.Author?.AuthorName</span>
                    </div>
                    <div class="d-flex align-items-center text-muted small">
                        <i class="bi bi-calendar3 me-2 text-icon-indigo"></i>
                        <span>Năm: @(item.PublicationYear?.ToString() ?? "N/A")</span>
                    </div>
                </div>

                <div class="pt-3 border-top d-flex justify-content-between align-items-center">
                    <span class="text-muted small">ID: #@item.BookId</span>
                    <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-white btn-sm px-3">
                        Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
    }
</div>
