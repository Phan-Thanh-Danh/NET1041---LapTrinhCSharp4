@model IEnumerable<Bai3.Models.Book>

@{
    ViewData["Title"] = "Danh sách sách";
}

<div class="container mt-5">
    <div class="row align-items-center mb-5">
        <div class="col">
            <h1 class="fw-bold text-dark mb-1">
                <i class="bi bi-journal-bookmark-fill me-2 text-icon-blue opacity-75"></i>@ViewData["Title"]
            </h1>
            <p class="text-muted mb-0">Quản lý các đầu sách trong thư viện của bạn.</p>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-lg me-1"></i>Thêm sách mới
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4 py-3" role="alert" style="background-color: #f0fdf4; color: #15803d;">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-3 fs-4 opacity-75"></i>
                <div class="fw-medium">@TempData["SuccessMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm overflow-hidden animate-fade-in">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="ps-5">ID</th>
                                <th>Tiêu đề sách</th>
                                <th>Năm xuất bản</th>
                                <th>Tác giả</th>
                                <th class="text-center pe-5">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-5 text-muted small fw-medium">#@item.BookId</td>
                                    <td>
                                        <div class="fw-bold fs-5">@item.BookTitle</div>
                                    </td>
                                    <td>
                                        <span class="badge rounded-pill px-4 py-2" style="background-color: #f4f4f5; color: #3f3f46; border: 1px solid #e4e4e7;">
                                            @(item.PublicationYear?.ToString() ?? "N/A")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3 rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 36px; height: 36px; border: 1px solid #e4e4e7;">
                                                <i class="bi bi-person text-muted"></i>
                                            </div>
                                            <span class="fw-medium">@item.Author?.AuthorName</span>
                                        </div>
                                    </td>
                                    <td class="text-center pe-5">
                                        <div class="btn-group rounded-3 overflow-hidden border shadow-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.BookId" 
                                               class="btn btn-sm btn-white px-3" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.BookId" 
                                               class="btn btn-sm btn-white px-3" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.BookId" 
                                               class="btn btn-sm btn-white px-3" title="Xóa">
                                                <i class="bi bi-trash text-danger"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-5 text-center">
                    <img src="https://illustrations.popsy.co/slate/reading-book.svg" alt="No data" style="width: 250px; opacity: 0.3;">
                    <h4 class="mt-4 text-muted">Chưa có sách nào</h4>
                    <p class="text-muted">Hãy bắt đầu bằng cách thêm một cuốn sách mới!</p>
                    <a asp-action="Create" class="btn btn-outline-secondary btn-lg mt-3">Thêm ngay</a>
                </div>
            }
        </div>
    </div>
</div>
