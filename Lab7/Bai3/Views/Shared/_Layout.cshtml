<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bai3 Library</title>
    
    <!-- Google Fonts: Outfit -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="bg-icon-indigo p-2 rounded-3 me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="bi bi-book-half text-icon-indigo fs-4"></i>
            </div>
            <span class="fw-bold fs-4 text-dark">Bai3 Library</span>
        </div>
        <div class="sidebar-content">
            <div class="text-uppercase small fw-bold text-muted mb-3 px-3">Main Menu</div>
            <nav class="nav flex-column">
                <a class="nav-link-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Books" ? "active" : "")" 
                   asp-controller="Books" asp-action="Index">
                    <i class="bi bi-stack text-icon-blue"></i>
                    <span>Tủ sách</span>
                </a>
                <a class="nav-link-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Authors" ? "active" : "")" 
                   asp-controller="Authors" asp-action="Index">
                    <i class="bi bi-person-lines-fill text-icon-purple"></i>
                    <span>Tác giả</span>
                </a>
                <div class="mt-auto pt-4">
                    <div class="text-uppercase small fw-bold text-muted mb-3 px-3">System</div>
                    <a class="nav-link-sidebar" asp-controller="Home" asp-action="Index">
                         <i class="bi bi-house-door text-icon-indigo"></i>
                         <span>Trang chủ</span>
                    </a>
                    <a class="nav-link-sidebar" asp-controller="Home" asp-action="Privacy">
                         <i class="bi bi-shield-lock text-icon-green"></i>
                         <span>Bảo mật</span>
                    </a>
                </div>
            </nav>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="main-wrapper">
        <header class="d-lg-none mb-4 d-flex align-items-center justify-content-between p-3 bg-white border rounded-3 shadow-sm">
            <div class="d-flex align-items-center">
                 <i class="bi bi-book-half text-primary fs-4 me-2"></i>
                 <span class="fw-bold">Library Console</span>
            </div>
            <button class="btn btn-light" id="sidebarToggle">
                <i class="bi bi-list fs-3"></i>
            </button>
        </header>

        <main role="main" class="animate-fade-in">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarToggle, #sidebarOverlay').on('click', function () {
                $('#sidebar, #sidebarOverlay').toggleClass('show');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
