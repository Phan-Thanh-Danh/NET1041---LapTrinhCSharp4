@model IEnumerable<Bai2.Models.Student>

@{
    ViewData["Title"] = "Quản lý Học sinh - Lazy Loading";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary fw-bold">
            <i class="bi bi-people-fill me-2"></i>Quản lý Học sinh
        </h1>
        <span class="badge bg-info text-dark p-2">Lazy Loading Enabled</span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 10%;">ID</th>
                            <th style="width: 30%;">Họ và tên</th>
                            <th style="width: 60%;">Danh sách môn học</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td class="fw-bold text-muted">#@student.StudentId</td>
                                <td class="fw-bold text-dark">@student.Name</td>
                                <td>
                                    @if (student.Courses != null && student.Courses.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-2">
                                            @foreach (var course in student.Courses)
                                            {
                                                <span
                                                    class="badge bg-secondary-subtle text-secondary border border-secondary-subtle px-3 py-2 rounded-pill">
                                                    <i class="bi bi-book me-1"></i>@course.Title
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-danger small italic text-opacity-75">
                                            <i class="bi bi-exclamation-circle me-1"></i>Chưa đăng ký môn học nào
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-4 shadow-sm border-0 d-flex align-items-center" role="alert">
            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
            <div>Hiện chưa có thông tin học sinh nào trong hệ thống.</div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .table thead th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            padding: 1rem;
        }

        .table tbody td {
            padding: 1rem;
        }

        .bg-secondary-subtle {
            background-color: #f8f9fa !important;
        }

        .badge {
            font-weight: 500;
        }
    </style>
}