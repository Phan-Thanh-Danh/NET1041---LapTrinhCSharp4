@model IEnumerable<Bai3.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm - Explicit Loading";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white p-4 rounded-top-4">
            <h2 class="mb-0"><i class="fas fa-shopping-bag me-2"></i>Quản lý cửa hàng</h2>
            <p class="mb-0 opacity-75">Sử dụng kỹ thuật Explicit Loading để tải thông tin danh mục</p>
        </div>
        <div class="card-body p-4">
            <table class="table table-hover table-bordered border-light align-middle">
                <thead class="bg-light">
                    <tr class="text-uppercase small fw-bold text-muted">
                        <th style="width: 10%">ID</th>
                        <th style="width: 45%">Tên sản phẩm</th>
                        <th style="width: 45%">Danh mục (Explicit Loaded)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-primary">#@item.ProductId</td>
                                <td>@item.Name</td>
                                <td>
                                    @if (item.Category != null)
                                    {
                                        <span class="badge bg-info text-dark rounded-pill px-3">
                                            @item.Category.CategoryName
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill px-3">
                                            Không có danh mục
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <i class="fas fa-info-circle me-2"></i>Không có sản phẩm nào được tìm thấy.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-white text-end p-3 rounded-bottom-4">
            <small class="text-muted">Bài 3 - Lab 8: Kỹ thuật Explicit Loading trong EF Core</small>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background-color: #f4f7f6;
        }
        .card {
            transition: transform 0.3s ease;
        }
        .table thead th {
            border-top: none;
            background-color: #f8f9fa;
        }
        .badge {
            font-size: 0.9rem;
            font-weight: 500;
        }
    </style>
}
